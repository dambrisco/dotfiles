" Commands
" ------------------------------------------------------------

" easily get to vim config
command Vimrc        :e ~/dotfiles/vim/vimrc
command VimCommands  :e ~/dotfiles/vim/vimrc_commands
command VimMaps      :e ~/dotfiles/vim/vimrc_mappings
command VimPlugins   :e ~/dotfiles/vim/vimrc_plugins
command VimSettings  :e ~/dotfiles/vim/vimrc_settings
command VimBundles   :e ~/dotfiles/dotfiles/vim_bundles
command VimNT :NERDTree ~/dotfiles/vim

" easily get to bashrc
command Bashrc :e ~/dotfiles/bash/bashrc

command Zshrc :e ~/dotfiles/zsh/zshrc
