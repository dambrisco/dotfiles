" Commands
" ------------------------------------------------------------

" easily get to vim config
command Vimrc        :e $HOME/dotfiles/vim/vimrc
command VimCommands  :e $HOME/dotfiles/vim/vimrc_commands
command VimMaps      :e $HOME/dotfiles/vim/vimrc_mappings
command VimPlugins   :e $HOME/dotfiles/vim/vimrc_plugins
command VimSettings  :e $HOME/dotfiles/vim/vimrc_settings
command VimBundles   :e $HOME/dotfiles/vim/vim_bundles
command VimNT :NERDTree $HOME/dotfiles/vim

" easily get to bashrc
command Bashrc :e $HOME/dotfiles/bash/bashrc

" easily get to zshrc
command Zshrc :e $HOME/dotfiles/zsh/zshrc
